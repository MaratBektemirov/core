{
  "linterOptions": {
    "exclude": [
      "./node_modules/**"
    ]
  },
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "member-ordering": [
      true,
      "public-before-private",
      "static-before-instance",
      "variables-before-functions"
    ],
    "no-empty-interface": true,
    "no-import-side-effect": false,
    "no-inferrable-types": false,
    "no-internal-module": true,
    "no-magic-numbers": false,
    "no-namespace": false,
    "no-non-null-assertion": false,
    "no-reference": true,
    "no-var-requires": false,
    "only-arrow-functions": false,
    "typedef": true,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],

    "ban": [
      true,
      { "name": "URLSearchParams", "message": "Use HttpParams instead" }
    ],
    "curly": [true, "ignore-same-line"],
    "forin": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-empty": true,
    "no-invalid-template-strings": true,
    "no-eval": true,
    "no-null-keyword": false,
    "no-shadowed-variable": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-unbound-method": false,
    "no-unnecessary-class": [true, "allow-static-only", "allow-constructor-only", "allow-empty-class"],
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-use-before-declare": false,
    "no-var-keyword": true,
    "radix": true,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "use-default-type-parameter": true,
    "use-isnan": true,

    "cyclomatic-complexity": [true, 15],
    "deprecation": true,
    "eofline": true,
    "indent": [true, "spaces", 2],
    "max-file-line-count": [true, 500],
    "max-line-length": [true, { "limit": 200, "ignore-pattern": "^import |^export {(.*?)}" }],
    "no-duplicate-imports": true,
    "no-require-imports": true,
    "prefer-const": true,
    "trailing-comma": true,

    "arrow-parens": true,
    "arrow-return-shorthand": true,
    "class-name": true,
    "encoding": true,
    "import-spacing": true,
    "interface-name": false,
    "newline-before-return": true,
    "new-parens": true,
    "no-boolean-literal-compare": true,
    "no-consecutive-blank-lines": true,
    "no-reference-import": true,
    "number-literal-format": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-finally",
      "check-whitespace"
    ],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "prefer-switch": [true, { "min-cases": 3 }],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": true,
    "space-before-function-paren": [true, { "asyncArrow": "always"} ],
    "space-within-parens": false,
    "switch-final-break": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-module",
      "check-rest-spread",
      "check-typecast",
      "check-type"
    ],

    "banana-in-box": true,
    "contextual-life-cycle": true,
    "decorator-not-allowed": true,
    "pipe-impure": true,

    "no-attribute-parameter-decorator": true,
    "no-unused-css": true,
    "use-life-cycle-interface": true,
    "use-pipe-decorator": true,
    "use-pipe-transform-interface": true,

    "angular-whitespace": [true, "check-semicolon"],
    "import-destructuring-spacing": true,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true
  }
}
